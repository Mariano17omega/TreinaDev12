<%= form_for(@movie) do |f| %>
    <% if @movie.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
  
        <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= f.label :title, "Título" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :release_year, "Ano de Lançamento" %><br>
      <%= f.number_field :release_year %>
    </div>
    <div class="field">
      <%= f.label :synopsis, "Sinopse" %><br>
      <%= f.text_area :synopsis %>
    </div>
    <div class="field">
      <%= f.label :country, "País de Origem" %><br>
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :duration, "Duração (em minutos)" %><br>
      <%= f.number_field :duration %>
    </div>
    <div class="field">
      <%= f.label :director_id, "Diretor" %><br>
      <%= f.collection_select :director_id, Director.all, :id, :name, prompt: true %>
    </div>
    <div class="field">
      <%= f.label :genre_id, "Gênero" %><br>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: true %>
    </div>
  
    <div class="actions">
      <%= f.submit "Salvar" %>
    </div>
  <% end %>
   